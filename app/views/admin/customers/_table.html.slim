/ app/views/admin/customers/_table.html.slim
= render "admin/shared/table", collection: @customers, pagy: @pagy do |customer|
  .flex.gap-2
    = link_to edit_admin_customer_path(customer),
      class: 'text-indigo-600 hover:text-indigo-900',
      data: { turbo_frame: "modal" } do
      span Edit
    = button_to admin_customers_path(customer),
      method: :delete,
      class: 'text-red-600 hover:text-red-900',
      data: { confirm: 'Are you sure?' } do
      span Delete

/ .overflow-x-auto
/         table.min-w-full.divide-y.divide-zinc-300
/           thead.bg-zinc-50
/             tr
/               th.px-6.py-3.text-left.text-xs.font-medium.text-zinc-500.uppercase.tracking-wider ID
/               th.px-6.py-3.text-left.text-xs.font-medium.text-zinc-500.uppercase.tracking-wider Email
/               th.px-6.py-3.text-left.text-xs.font-medium.text-zinc-500.uppercase.tracking-wider Created
/               th.px-6.py-3.text-left.text-xs.font-medium.text-zinc-500.uppercase.tracking-wider Updated
/               th.px-6.py-3.text-left.text-xs.font-medium.text-zinc-500.uppercase.tracking-wider Actions
/           tbody.divide-y.divide-zinc-200.bg-white
/             - @customers.each do |customer|
/               tr.hover:bg-zinc-50
/                 td.px-6.py-4.whitespace-nowrap.text-sm.text-zinc-900 = customer.id
/                 td.px-6.py-4.whitespace-nowrap.text-sm.text-zinc-900 = customer.email
/                 td.px-6.py-4.whitespace-nowrap.text-sm.text-zinc-500 = l customer.created_at, format: :short
/                 td.px-6.py-4.whitespace-nowrap.text-sm.text-zinc-500 = l customer.updated_at, format: :short
/                 td.px-6.py-4.whitespace-nowrap.text-sm.text-zinc-500
/                   .flex.gap-2
/                     = link_to edit_admin_customer_path(customer), class: 'text-indigo-600 hover:text-indigo-900'
/                       do
/                       span Edit
/                     = button_to admin_customer_path(customer), method: :delete, class: 'text-red-600 hover:text-red-900', data: { confirm: 'Are you sure?' } do
